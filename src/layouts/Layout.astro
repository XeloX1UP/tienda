---
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>Aura Store  - {title ? title : 'Tu tienda de tecnología'}</title>
		<ClientRouter />
	</head>
	<body class="bg-bg-100 flex flex-col min-h-screen text-text-100">
			<header class=" bg-bg-200/70 flex justify-center items-center ">
				<a href="/"><h1 class="text-text-100 text-2xl sm:text-3xl md:text-4xl font-bold h-24 content-center">Aura Detail</h1></a>
			</header>
			<nav class="flex justify-between text-text-100/70 border-b border-bg-300 py-3 px-4 sm:px-6 mb-6 [&>ul]:flex [&>ul]:gap-2 [&>ul]:sm:gap-4 [&>ul]:sm:text-xl [&>ul]:[&>li]:cursor-pointer [&>ul]:[&>li]:hover:text-text-100 transition-colors">
				<ul>
					<li><a href="/">Inicio</a></li>
					<li><a href="/auraStore">Tienda</a></li>
				</ul>
				<ul>
					<li><a href="/login" data-astro-reload >Iniciar sesión</a></li>
					<li><a href="/registro" data-astro-reload>Registrarse</a></li>
				</ul>
			</nav>
			<div class=" flex-1">
				<slot />

			</div>
			<footer>
				<p class="text-center p-4 text-text-100">© 2025 Aura Detail. Todos los derechos reservados.</p>
			</footer>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		scrollbar-gutter: stable
	}
</style>
